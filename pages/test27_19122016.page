        <apex:pageblocksection >
            <apex:outputField value="{!Opportunity.Name}"/>
            <apex:pageblocksectionItem />
            <apex:outputField value="{!Opportunity.IsClosed}"/>
        </apex:pageblocksection>
    </apex:pageblock>    
    
</apex:page>