            <apex:outputField value="{!Opportunity.Name}"/>
            <apex:pageblocksectionItem />
            <apex:outputField value="{!Opportunity.IsClosed}"/>
        </apex:pageblocksection>
    </apex:pageblock>    
    
    <!-- mode - edit -->
    <apex:pageblock title="Mode - edit" mode="edit">
        <apex:pageblocksection >
            <apex:outputField value="{!Opportunity.Name}"/>
            <apex:pageblocksectionItem />
            <apex:outputField value="{!Opportunity.IsClosed}"/>
        </apex:pageblocksection>
    </apex:pageblock>    
    
    <!-- mode - inlineEdit -->
